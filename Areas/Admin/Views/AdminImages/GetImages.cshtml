@model FileManagerModel

<div class="container my-5">
    @if(Model.Files != null){
        <h3>Imagens: </h3>
        <hr/>
        var path = Model.PathImagesProduct;
        <div class="row">
            @foreach(FileInfo file in Model.Files){
                <div class="column">
                    <img src="~/@path/@file.Name" width="125" height="125" >
                    <div style="padding:10px;text-align:left">
                        <a href="@Url.Action("DeleteFile", "AdminImages", new {fname = file.Name})">Deletar</a>
                    </div>
                </div>
            }
        </div>
    }
</div>