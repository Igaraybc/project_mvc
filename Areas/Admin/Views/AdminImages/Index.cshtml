<div class="container my-5">
    <table class="table">
        <tr>
            <td>
                <form method="post" enctype="multipart/form-data" asp-controller="AdminImages" asp-action="UploadFiles">
                    <div class="form-group">
                        <div class="col-md-10">
                            <p><b>Selecione um ou mais arquivos para enviar: </b></p>
                            <p>(Arquivos com o mesmo nome ser√£o sobrescritos)</p>
                            <input type="file" name="files" multiple class="button btn-outline-primary" />
                        </div>
                    </div>
                    <hr>
                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="submit" value="Enviar Arquivo(s)" class="btn btn-outline-primary" />
                        </div>
                    </div>
                </form>
            </td>
            <td>
                <form method="post" enctype="multipart/form-data" asp-controller="AdminImages" asp-action="GetImages">
                    <div class="form-group">
                        <div class="col-md-10">
                            <p><strong>Visualizar imagens na pasta do servidor:</strong></p>
                        </div>
                    </div>
                    <hr>
                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="submit" value="Visualizar Arquivos no servidor" class="btn btn-outline-primary" />
                        </div>
                    </div>
                </form>
            </td>
        </tr>
    </table>
    <div class="container">
        @if(ViewData["Deleted"] != null){
            <li>@ViewData["Deleted"]</li>
        }
    </div>
</div>